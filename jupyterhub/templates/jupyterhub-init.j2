#! /bin/sh
### BEGIN INIT INFO
# Provides:          jupyterhub
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start jupyterhub
# Description:       This file should be used to construct scripts to be
#                    placed in /etc/init.d.
### END INIT INFO
PATH=/sbin:/usr/sbin:/bin:/usr/bin
DESC="Multi-user server for Jupyter notebooks"
NAME=jupyterhub
DAEMON=/usr/bin/jupyterhub
DAEMON_ARGS="--config=/etc/jupyterhub/jupyterhub_config.py"
SCRIPTNAME=/etc/init.d/$NAME
{% if authenticator == 'gitlab_oauth' %}
export GITLAB_HOST={{ gitlab.host }}
{% endif %}

# Source function library.
. /etc/init.d/functions

start() {
    cd /etc/jupyterhub
    daemon "$DAEMON $DAEMON_ARGS" &
}

stop() {
    # code to stop app comes here
    # example: killproc program_name
    killproc $DAEMON
}

case "$1" in
    start)
       start
       ;;
    stop)
       stop
       ;;
    restart)
       stop
       start
       ;;
    status)
       status $DAEMON
       ;;
    *)
       echo "Usage: $0 {start|stop|status|restart}"
esac

exit 0

